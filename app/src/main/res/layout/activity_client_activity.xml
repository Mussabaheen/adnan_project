<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".Client_activity">




    <TextView
        android:id="@+id/client_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#FFF"
        android:textSize="30dp"
        android:text="            CLIENT LOGIN" />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="340dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:ems="10"
        android:hint="USERNAME"
        android:inputType="textPersonName"
        android:textColor="#FFF"
        android:textColorHint="#FFF"
         />

    <EditText
        android:id="@+id/password_text_client"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="0dp"
        android:textColorHint="#FFF"
        android:layout_marginRight="0dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="PASSWORD"
        android:textColor="#FFF"
         />

    <Button
        android:id="@+id/log_in_client"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/password_text_client"
        android:layout_alignRight="@id/password_text_client"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="161dp"
        android:layout_marginRight="161dp"
        android:layout_marginBottom="54dp"
        android:background="#FFF"
        android:text="LOG IN" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_alignEnd="@id/client_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/background_cl"
        android:layout_alignRight="@id/client_title" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="161dp"
        android:layout_marginRight="161dp"
        android:layout_marginBottom="0dp"
        android:onClick="sign_up"
        android:background="#0000FF"
        android:textColor="#FFF"
        android:text="SIGN UP!" />

</RelativeLayout>